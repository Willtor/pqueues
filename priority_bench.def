begin
    switch b with
    xcase FHSL_LF: return "fhsl_lf";
    xcase C_FHSL_LF: return "c_fhsl_lf";
    xcase FHSL_B: return "fhsl_b";
    xcase FHSL_TX: return "fhsl_tx";
