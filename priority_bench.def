    xcase C_SPRAY: return "c_spray";
    xcase C_SPRAY_TX: return "c_spray_tx";
    xcase SL_PQ: return "sl_pq";
    xcase C_SL_PQ: return "c_sl_pq";
    xcase LJ_PQ: return "lj_pq";
